{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "es5"
  },
  "deno2node": {
    "shim": "shim.node.ts",
    "vendorDir": "deps"
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
